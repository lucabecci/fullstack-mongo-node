{{#if error}}
    <div class="alert alert-dismissible alert-danger">
        {{error}}
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
        </button> 
    </div>
{{/if}}

{{#each errors}}
    <div class="alert alert-dismissible alert-danger">
        {{text}}
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
        </button> 
    </div>
{{/each}}
