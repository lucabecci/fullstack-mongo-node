<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                Account Login
            </div>
            <img src="/img/logo.jpeg" class="rounded-circle mx-auto d-block m-4 logo">
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="form-group">
                        <input type="email" class="form-control" name='email' placeholder="Insert your email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name='password' placeholder="Insert your password">
                    </div>
                    <button class="btn btn-primary btn-block">
                        SIGNIN
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>